                ],
                quizQuestions: [
                    {
                        question: "áá¾ AI ááŸ†áá¶á„á±áŸ’á™á¢áŸ’áœá¸?",
                        options: ["á”á‰áŸ’á‰á¶áŸá·á”áŸ’á”á“á·á˜áŸ’á˜á·á", "á‚áŸ†á“á·ááŠáŸá¢áŸáŸ’á…á¶ášáŸ’á™", "áŸá—á¶áœá‚áá·áŸááŸ’áœ", "á–áŸááŸŒá˜á¶á“áŸáŸ’áœáŸá™á”áŸ’ášáœááŸ’áá·"],
